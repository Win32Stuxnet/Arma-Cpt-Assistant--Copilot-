# AI Bridge Service Configuration

# Server Configuration
PORT=3001

# Arma Reforger Profile Path
# Windows: C:/Users/YourName/AppData/Local/ArmaReforger/profile/
# Linux: ~/.local/share/ArmaReforger/profile/
ARMA_PROFILE_PATH=C:/Users/YourName/AppData/Local/ArmaReforger/profile/

# Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI API Configuration  
OPENAI_API_KEY=your_openai_api_key_here

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Rate Limiting (requests per minute)
CLAUDE_RATE_LIMIT=100
OPENAI_RATE_LIMIT=60
OLLAMA_RATE_LIMIT=1000

# Request Timeout (milliseconds)
REQUEST_TIMEOUT=60000

# Custom AI Service Endpoints (optional)
# CUSTOM_AI_ENDPOINT=https://your-ai-service.com/api
# CUSTOM_AI_KEY=your_custom_api_key